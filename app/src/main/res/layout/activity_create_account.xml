<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CreateAccountActivity">
    <TextView
        android:id="@+id/text_title_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRIAR CONTA"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="@dimen/distance_edittext"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/edit_nome_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:layout_margin="@dimen/distance_edittext"
        app:layout_constraintTop_toBottomOf="@id/text_title_create"/>
    <EditText
        android:id="@+id/edit_user_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User"
        android:layout_margin="@dimen/distance_edittext"
        app:layout_constraintTop_toBottomOf="@id/edit_nome_create"/>
    <EditText
        android:id="@+id/edit_password_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:layout_margin="@dimen/distance_edittext"
        app:layout_constraintTop_toBottomOf="@id/edit_user_create"/>
    <Button
        android:id="@+id/button_createaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar conta"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>